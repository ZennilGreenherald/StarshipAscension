{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "gcc",
			"args": [
				"-o",
				"starship",
				"shields_manager.o",
				"ship.o",
				"station.o",
				"main.o",
				"weapons_manager.o",
				"movement.o"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$gcc"
		},
		{
			"label": "Debug",
			"type": "shell",
			"command": "gdb",
			"args": [
				"-ex",
				"file ${workspaceFolder}/build/myProgram",
				"-ex",
				"run"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "ctest",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}