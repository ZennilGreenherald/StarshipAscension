{
	"[c]": {
		"editor.defaultFormatter": "ms-vscode.cpptools"
	},
	"[cpp]": {
		"editor.defaultFormatter": "ms-vscode.cpptools",
		"editor.formatOnSave": true
	},
	"files.associations": {
		"*.c": "C",
		"*.cpp": "cpp",
		"*.h": "C",
		"*.hpp": "cpp"
	},
	"workbench.editorAssociations": {
		"*.c": "default",
		"*.cpp": "default",
		"*.h": "default",
		"*.hpp": "default"
	}
}